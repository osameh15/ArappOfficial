<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RegLogActivity"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/colorAccent">

    <ImageView
        android:id="@+id/splashLogo_main"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:contentDescription="@string/app_name"
        android:layout_centerInParent="true"
        android:transitionName="logo"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/signUpRegLog"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_below="@id/splashLogo_main"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:drawableEnd="@drawable/ic_person_outline_black_24dp"
        android:paddingEnd="10dp"
        android:paddingStart="50dp"
        android:fontFamily="@font/vazir_bold"
        android:gravity="center"
        android:elevation="2dp"
        android:text="@string/sign_up"
        android:textColor="@color/text1"
        android:textSize="22sp"
        android:onClick="registerButton"/>

    <TextView
        android:id="@+id/loginRegLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/signUpRegLog"
        android:fontFamily="@font/vazir_bold"
        android:text="@string/login_arapp"
        android:textColor="@color/shade5"
        android:textSize="18sp"
        android:onClick="loginButton"/>

</RelativeLayout>