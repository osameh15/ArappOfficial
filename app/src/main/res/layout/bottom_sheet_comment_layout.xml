<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background"
    app:behavior_peekHeight="60dp"
    app:behavior_hideable="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="4dp"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_emoji_emotions_24"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/app_name"
            android:onClick="rateService"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text6"
            android:text="@string/comment_consent"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_marginStart="-25dp"
            android:fontFamily="@font/vazir_medium"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text5"
        android:text="@string/comment_submit"
        android:textSize="12sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/vazir_medium"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textCommentBottomSheet"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="@string/comment_here"
        android:layoutDirection="rtl"
        android:layout_gravity="center_horizontal"
        app:boxStrokeColor="@color/shade6"
        app:boxCornerRadiusBottomEnd="15dp"
        app:boxCornerRadiusBottomStart="15dp"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusTopStart="15dp"
        app:errorTextAppearance="@style/error_appearance"
        app:counterEnabled="true"
        app:counterMaxLength="120"
        app:counterOverflowTextAppearance="@style/error_appearance"
        app:counterTextAppearance="@style/counter_appearance">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine|textCapSentences"
            android:textColor="@color/black"
            android:imeOptions="actionDone"
            android:ems="10"
            android:minLines="1"
            android:maxLines="6"
            android:maxLength="121"
            android:textSize="12sp"
            android:textAlignment="textStart"
            android:fontFamily="@font/vazir">
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text5"
        android:text="@string/confirm_comment"
        android:textSize="12sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/vazir_medium"/>

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/loadingCommentBottomSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:SpinKit_Style="DoubleBounce"
        app:SpinKit_Color="@color/colorPrimary"
        style="@style/loadingStyle"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
        android:id="@+id/close_bottom_sheet_comment"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rate_min_shape"
        android:fontFamily="@font/vazir_bold"
        android:text="@string/close"
        android:textColor="@color/text1"
        android:textSize="14sp"
        android:elevation="2dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        app:spinning_bar_padding="10dp"
        app:spinning_bar_color="@color/text1"
        app:spinning_bar_width="3dp"/>

</LinearLayout>