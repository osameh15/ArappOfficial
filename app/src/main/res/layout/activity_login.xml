<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.arapp.arappofficial.Activities.LoginActivity"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/colorAccent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/userLogin"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="@string/phone_number"
            android:layoutDirection="rtl"
            android:elevation="2dp"
            android:layout_gravity="center_horizontal"
            app:boxStrokeColor="@color/shade6"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:errorTextAppearance="@style/error_appearance">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="phone"
                android:imeOptions="actionNext"
                android:textSize="16sp"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:fontFamily="@font/vazir"
                android:maxLength="11">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordLogin"
            android:layout_width="320dp"
            android:layout_height="60dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="@string/login_pass"
            android:layoutDirection="rtl"
            android:elevation="2dp"
            android:layout_gravity="center_horizontal"
            app:boxStrokeColor="@color/shade6"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:passwordToggleEnabled="true"
            app:errorTextAppearance="@style/error_appearance">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/bahnschrift"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:textSize="18sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:id="@+id/rememberMe"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/remember_me"
            android:fontFamily="@font/vazir"
            android:textSize="14sp"
            android:textColor="@color/text5"
            android:layout_gravity="center"
            android:checked="true"/>

        <TextView
            android:id="@+id/forgetPasswordLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/forgetten_password"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:fontFamily="@font/vazir_bold"
            android:textColor="@color/colorAccentDark"
            android:onClick="forgetPassword"/>
        
        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/loginButton"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/vazir_bold"
            android:layout_gravity="center"
            android:text="@string/login"
            android:textColor="@color/text1"
            android:textSize="20sp"
            android:elevation="2dp"
            app:spinning_bar_padding="10dp"
            app:spinning_bar_color="@color/text1"
            app:spinning_bar_width="3dp"
            android:onClick="login"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layoutDirection="rtl">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_in_login"
            android:textSize="16sp"
            android:fontFamily="@font/vazir_bold"
            android:textColor="@color/colorAccentDark"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/sign_up"
            android:textSize="18sp"
            android:fontFamily="@font/vazir_bold"
            android:textColor="@color/shade5"
            android:onClick="signUp"/>

    </LinearLayout>

</RelativeLayout>